# Submissions Synthesizer Configuration
# Copy this file to .env and customize as needed
# 
# NOTE: This application works completely offline and doesn't require
# any API keys or external services. These settings are optional
# and mainly used for development and testing.

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Level (for developers)
# Options: DEBUG, INFO, WARN, ERROR, CRITICAL
# Default: INFO
DEBUG_LEVEL=INFO

# Enable debug mode automatically
# Set to true to show debug panel on every page load
# Default: false (only enabled with ?debug URL parameter)
AUTO_DEBUG=false

# Performance monitoring
# Set to true to enable automatic performance monitoring
# Default: false
PERFORMANCE_MONITORING=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test environment
# Used by automated testing scripts
# Options: development, testing, production
NODE_ENV=development

# Browser for E2E testing
# Options: chromium, firefox, webkit
E2E_BROWSER=chromium

# Test timeout (milliseconds)
# How long to wait for tests to complete
TEST_TIMEOUT=30000

# Headless testing
# Set to false to see browser during E2E tests
HEADLESS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# File upload restrictions
# Maximum file size in MB (default: 25MB)
MAX_FILE_SIZE=25

# Allowed file types (comma-separated)
# Default: pdf,docx,doc,txt
ALLOWED_FILE_TYPES=pdf,docx,doc,txt

# Memory usage warnings
# Warn when memory usage exceeds this percentage
# Default: 80
MEMORY_WARNING_THRESHOLD=80

# =============================================================================
# ACCESSIBILITY SETTINGS
# =============================================================================

# High contrast mode
# Set to true to enable high contrast mode by default
HIGH_CONTRAST=false

# Reduce motion
# Set to true to minimize animations
REDUCE_MOTION=false

# Screen reader mode
# Set to true to optimize for screen readers
SCREEN_READER=false

# =============================================================================
# LEGAL PROFESSIONAL SETTINGS
# =============================================================================

# Default AI platform
# Options: claude, gemini, both
DEFAULT_PLATFORM=claude

# Default position
# Options: applicant, respondent
DEFAULT_POSITION=applicant

# Auto-save interval (minutes)
# How often to automatically backup work
# Default: 5 minutes
AUTO_SAVE_INTERVAL=5

# Session retention (days)
# How long to keep saved sessions in browser storage
# Default: 30 days
SESSION_RETENTION_DAYS=30

# =============================================================================
# PRIVACY SETTINGS
# =============================================================================

# Analytics disabled
# This application never sends data externally
# This setting is here for completeness
ANALYTICS_ENABLED=false

# Error reporting
# Local error logging only (never sent externally)
ERROR_LOGGING=true

# Debug data retention (days)
# How long to keep debug logs in browser storage
# Default: 7 days
DEBUG_RETENTION_DAYS=7

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Lazy loading
# Enable lazy loading for better performance
LAZY_LOADING=true

# Cache size (MB)
# Maximum browser cache size for the application
CACHE_SIZE_MB=50

# Background processing
# Enable background processing for large documents
BACKGROUND_PROCESSING=true

# =============================================================================
# INSTRUCTIONS FOR NON-TECHNICAL USERS
# =============================================================================

# üîß HOW TO USE THIS FILE:
# 
# 1. You DON'T need to modify this file for basic usage
#    - The app works perfectly without any configuration
#    - Just open index.html in your browser
#
# 2. IF you want to customize settings:
#    - Copy this file and rename it to ".env" (remove .example)
#    - Change the values after the = sign
#    - Save the file in the same folder as index.html
#
# 3. WHAT THESE SETTINGS DO:
#    - DEBUG_LEVEL: How much technical information to show
#    - MAX_FILE_SIZE: Largest file you can upload (in MB)
#    - AUTO_SAVE_INTERVAL: How often to backup your work
#    - HIGH_CONTRAST: Makes text easier to read
#    - REDUCE_MOTION: Less animations (helpful for some users)
#
# 4. SAFE DEFAULTS:
#    - All settings have safe defaults
#    - The app will work even if this file doesn't exist
#    - No personal information is stored in this file
#
# 5. SECURITY NOTE:
#    - This file only affects your local computer
#    - No data is ever sent to external servers
#    - All processing happens in your browser

