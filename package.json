{
  "name": "subs-prompt-generator",
  "version": "1.0.0",
  "description": "Legal submissions prompt generator with comprehensive testing and debugging",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:security": "npm run test:security:audit && npm run test:security:lint",
    "test:security:audit": "npm audit --audit-level moderate",
    "test:security:lint": "eslint . --ext .js,.html --config .eslintrc.security.js",
    "test:performance": "jest tests/performance",
    "test:all": "npm run test && npm run test:e2e && npm run test:security",
    "test:quick-check": "npm run test:unit && npm run lint",
    "test:quick": "npm run test:unit",
    "test:health": "npm run test:quick-check && echo '✅ Health check passed!'",
    "test:visual": "npm run serve & sleep 3 && npm run test:e2e -- --project=chromium && killall node",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "debug": "node --inspect-brk src/debug/debug-server.js",
    "serve": "http-server . -p 8080 -c-1",
    "serve:background": "http-server . -p 8080 -c-1 > /dev/null 2>&1 &",
    "validate": "html-validate index.html",
    "accessibility": "pa11y http://localhost:8080",
    "lighthouse": "lighthouse http://localhost:8080 --output=json --output-path=./reports/lighthouse.json",
    "setup": "npm install && npx playwright install && echo '✅ Setup complete! Run: npm run test:health'",
    "clean": "rm -rf node_modules coverage test-results reports && echo '🧹 Cleaned up test artifacts'",
    "doctor": "npm run test:health && npm run validate && echo '🏥 System diagnosis complete'"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.53.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-html": "^7.1.0",
    "html-validate": "^8.7.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.3.0",
    "pa11y": "^6.2.3",
    "puppeteer": "^21.5.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/debug/**/*",
      "!node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [
    "legal",
    "submissions",
    "prompt-generator",
    "legal-tech",
    "ai-assistant"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}